[Unit]
Description=AI Shorts Pro Backend
After=network.target

[Service]
Type=simple
User=azamans
WorkingDirectory=/home/azamans/webapp/ai-shorts-pro/backend
ExecStart=/usr/bin/node server.js
Restart=always
RestartSec=10
StandardOutput=append:/home/azamans/webapp/ai-shorts-pro/backend/server.log
StandardError=append:/home/azamans/webapp/ai-shorts-pro/backend/server.log
Environment=NODE_ENV=production
Environment=PORT=5555

[Install]
WantedBy=multi-user.target
